{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Joan Agents Configuration",
  "description": "Configuration file for Joan multi-agent orchestration system",
  "type": "object",
  "required": ["projectId", "projectName", "settings", "agents"],
  "properties": {
    "projectId": {
      "type": "string",
      "format": "uuid",
      "description": "The Joan project UUID this agent system operates on"
    },
    "projectName": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable project name for display"
    },
    "settings": {
      "type": "object",
      "required": ["pollingIntervalMinutes", "maxIdlePolls"],
      "properties": {
        "model": {
          "type": "string",
          "enum": ["opus", "sonnet", "haiku"],
          "default": "opus",
          "description": "Claude model to use for all agents"
        },
        "pollingIntervalMinutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 60,
          "default": 10,
          "description": "Minutes between polls when task queue is empty"
        },
        "maxIdlePolls": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 6,
          "description": "Number of consecutive empty polls before agent shuts down"
        },
        "staleClaimMinutes": {
          "type": "integer",
          "minimum": 10,
          "maximum": 1440,
          "default": 60,
          "description": "Minutes before orphaned dev claims are auto-released (self-healing)"
        },
        "maxPollCyclesBeforeRestart": {
          "type": "integer",
          "minimum": 3,
          "maximum": 100,
          "default": 10,
          "description": "Poll cycles before coordinator restarts to clear context (prevents drift)"
        },
        "stuckStateMinutes": {
          "type": "integer",
          "minimum": 15,
          "maximum": 1440,
          "default": 120,
          "description": "Minutes before tasks in same workflow state are flagged as stuck"
        },
        "schedulerIntervalSeconds": {
          "type": "integer",
          "minimum": 60,
          "maximum": 3600,
          "default": 300,
          "description": "Seconds between coordinator spawns when using external scheduler (/agents:scheduler)"
        },
        "schedulerStuckTimeoutSeconds": {
          "type": "integer",
          "minimum": 120,
          "maximum": 1800,
          "default": 600,
          "description": "Seconds before external scheduler kills a stuck coordinator (no heartbeat)"
        },
        "schedulerMaxConsecutiveFailures": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Max consecutive coordinator failures before scheduler stops"
        }
      }
    },
    "agents": {
      "type": "object",
      "properties": {
        "businessAnalyst": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether the BA agent is enabled"
            }
          },
          "required": ["enabled"]
        },
        "architect": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether the Architect agent is enabled"
            }
          },
          "required": ["enabled"]
        },
        "ops": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether the Ops agent is enabled"
            }
          },
          "required": ["enabled"]
        },
        "reviewer": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether the Code Reviewer agent is enabled"
            }
          },
          "required": ["enabled"]
        },
        "devs": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Whether worker agents are enabled"
            },
            "count": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10,
              "default": 2,
              "description": "Number of parallel devs to run"
            }
          },
          "required": ["enabled", "count"]
        }
      },
      "required": ["businessAnalyst", "architect", "ops", "reviewer", "devs"]
    }
  }
}
