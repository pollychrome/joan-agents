{
  "$schema": "./.claude/schemas/joan-agents.schema.json",
  "projectId": "2aeb0d02-5ece-4673-aa55-a42350fdac61",
  "projectName": "Joan Agents",
  "settings": {
    "model": "opus",
    "pollingIntervalMinutes": 5,
    "maxIdlePolls": 12,
    "staleClaimMinutes": 120,
    "maxPollCyclesBeforeRestart": 10,
    "stuckStateMinutes": 120,
    "contextRefresh": {
      "trigger": "workflow-complete"
    },
    "schedulerIntervalSeconds": 300,
    "schedulerStuckTimeoutSeconds": 600,
    "schedulerMaxConsecutiveFailures": 3,
    "pipeline": {
      "baQueueDraining": true,
      "maxBaTasksPerCycle": 10
    },
    "workerTimeouts": {
      "ba": 10,
      "architect": 20,
      "dev": 60,
      "reviewer": 20,
      "ops": 15
    }
  },
  "agents": {
    "businessAnalyst": {
      "enabled": true
    },
    "architect": {
      "enabled": true
    },
    "reviewer": {
      "enabled": true
    },
    "ops": {
      "enabled": true
    },
    "devs": {
      "enabled": true,
      "count": 1
    }
  }
}
